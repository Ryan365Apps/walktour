{
  "compilerOptions": {
    "sourceMap": true,
    "noImplicitAny": true,
    "noImplicitReturns": false,
    "strictNullChecks": false,
    "rootDirs": ["src", "stories"],
    "outDir": "dist",
    "module": "es6",
    "jsx": "react",
    "target": "es5",
    "lib": ["es5", "es6", "es7", "es2017", "es2018", "dom"],
    "strict": true,
    "moduleResolution": "node",
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": ["node_modules", "demo", "dist", "test"]
}
